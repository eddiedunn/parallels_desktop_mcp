{
  "name": "parallels-desktop-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for managing Parallels Desktop VMs on macOS",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --config jest.config.integration.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"*.json\" \"*.js\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.json\" \"*.js\" \"*.md\"",
    "security:check": "npm audit",
    "pre-commit": "npm run format:check && npm run lint && npm run type-check && npm run test:unit",
    "cleanup:vms": "ts-node scripts/cleanup-test-vms.ts",
    "cleanup:vms:dry-run": "ts-node scripts/cleanup-test-vms.ts --dry-run",
    "cleanup:vms:force": "ts-node scripts/cleanup-test-vms.ts --force",
    "cleanup:vms:help": "ts-node scripts/cleanup-test-vms.ts --help"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eddiedunn/parallels_desktop_mcp.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/eddiedunn/parallels_desktop_mcp/issues"
  },
  "homepage": "https://github.com/eddiedunn/parallels_desktop_mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nock": "^13.5.6",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
